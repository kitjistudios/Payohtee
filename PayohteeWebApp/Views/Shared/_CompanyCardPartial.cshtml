                            <dd class="col-sm-6">
                                <a href="tel: @Html.DisplayFor(model => model.FaxNumber)"> @Html.DisplayFor(model => model.FaxNumber)</a>
                            </dd>
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.CompanyEmail)
                            </dt>
                            <dd class="col-sm-6">
                                <a href="mailto: @Html.DisplayFor(model => model.CompanyEmail)">@Html.DisplayFor(model => model.CompanyEmail)</a>
                            </dd>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-info ">
