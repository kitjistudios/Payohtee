                            </dt>
                            <dd class="col-sm-6">
                                @Html.DisplayFor(model => model.CompanyTaxId)
                            </dd>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">

                    </div>
                    <div class="col-6">
                        <div class="row">
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.Address1)
                            </dt>
                            <dd class="col-sm-6">
